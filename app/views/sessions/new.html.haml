.row
  .small-12.columns
    %h1.text-center Sign In
    =form_for :session, url: sign_in_path do |f|
      .form-inputs
        %fieldset
          =f.label :email_or_username
          =f.text_field :login
        %fieldset
          .row
            .small-3.medium-1.columns
              =f.label :password
            .small-9.medium-11.columns
              %label
                =link_to "Forgot your password?", new_password_reset_path
          =f.password_field :password
        %fieldset
          .row
            .small-3.medium-1.columns
              .switch
                =f.check_box :remember_me, class: "switch-input"
                =f.label :remember_me, class: "switch-paddle" do
                  %span.show-for-sr Remember me on this computer
            .small-9.medium-11.columns
              Remember me on this computer
      .form-actions
        =f.submit "Sign In", class: "button"
        &nbsp;
        =link_to "Sign Up", sign_up_path, class: "button"
